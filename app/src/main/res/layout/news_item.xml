<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_item_height"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="@dimen/news_item_margin_small"
    android:layout_marginTop="@dimen/news_item_margin_small"
    android:layout_marginEnd="@dimen/news_item_margin_small"
    android:background="@drawable/item_border"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="@dimen/news_item_margin"
    android:paddingEnd="@dimen/news_item_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/news_item_margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/section_name"
            style="@style/PublicationDateStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@string/temp_section_name" />

        <TextView
            android:id="@+id/publication_date"
            style="@style/PublicationDateStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/news_item_margin"
            tools:text="@string/temp_publication_date" />


    </LinearLayout>

    <TextView
        android:id="@+id/web_title"
        style="@style/WebTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        tools:text="@string/temp_web_title" />

</LinearLayout>