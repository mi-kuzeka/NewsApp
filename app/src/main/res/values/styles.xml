<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PublicationDateStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/publication_date_font_size</item>
        <item name="android:textColor">?android:colorPrimary</item>
    </style>

    <style name="SectionNameStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/publication_date_font_size</item>
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:maxLines">@integer/section_name_max_lines</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppDayNightTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:isLightTheme">true</item>
    </style>
</resources>